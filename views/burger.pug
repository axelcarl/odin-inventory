include layout 

div(class='form-container')
  form(method="post")
    label(for="name") Name:
    input(type="text", name="name")
    label(for="breadType") Bread: 
    select(name="breadType")
      option(value="sesame") Sesame bun
      option(value="brioche") Brioche bun
      option(value="potato") Potato Bun 
    button submit

div(class='info-sec')
  h1 All burgers
  div
    each burger in burgers
      div 
        a(href=burger.url)= burger.name
